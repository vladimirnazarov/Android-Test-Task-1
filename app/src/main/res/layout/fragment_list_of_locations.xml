<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/list_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:translationZ="6dp"
        android:elevation="10dp"
        android:background="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/list_bottom_left_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"

            android:layout_weight="1">

            <ImageView
                android:id="@+id/list_icon_non_active_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"

                android:src="@drawable/ic_non_active_page_1"/>

            <ImageView
                android:id="@+id/list_icon_non_active_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"

                android:src="@drawable/ic_non_active_page_2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_bottom_right_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"

            android:layout_weight="1">

            <ImageView
                android:id="@+id/list_icon_non_active_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"

                android:src="@drawable/ic_non_active_page_3"/>

            <ImageView
                android:id="@+id/list_icon_active_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginEnd="25dp"
                android:layout_marginStart="20dp"

                android:src="@drawable/ic_active_page"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/list_layout_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/list_second_screen_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/ic_gold_plus"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="430dp"

        android:elevation="2dp"
        android:translationZ="6dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/list_layout_bottom"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/list_bottom_layout_icon_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:translationZ="8dp"
        android:elevation="12dp"

        android:layout_marginBottom="7dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_clock" />

</androidx.constraintlayout.widget.ConstraintLayout>