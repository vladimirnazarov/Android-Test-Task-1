<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/theme_frame_white"
        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:layout_marginVertical="15dp"

        android:background="@drawable/box_for_theme_white"

        android:translationZ="2dp"
        android:elevation="4dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/theme_frame_blue"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/box_for_theme_blue"

        android:translationZ="2dp"
        android:elevation="4dp"

        app:layout_constraintRight_toRightOf="@id/theme_frame_white"
        app:layout_constraintLeft_toLeftOf="@id/theme_frame_white"
        app:layout_constraintTop_toTopOf="@id/theme_frame_white"
        app:layout_constraintBottom_toBottomOf="@id/theme_frame_white"/>

    <TextView
        android:id="@+id/theme_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Улицы"

        android:textSize="24sp"
        android:typeface="monospace"

        android:translationZ="6dp"
        android:elevation="6dp"

        app:layout_constraintBottom_toBottomOf="@id/theme_frame_blue"
        app:layout_constraintEnd_toEndOf="@id/theme_frame_blue"
        app:layout_constraintStart_toStartOf="@id/theme_frame_blue"
        app:layout_constraintTop_toTopOf="@id/theme_frame_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>