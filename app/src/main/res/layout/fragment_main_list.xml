<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_location_background" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locations"
            android:textAllCaps="true"
            android:textSize="28sp"
            android:typeface="monospace"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="408dp"
        android:layout_height="80dp"

        android:translationZ="6dp"
        android:elevation="10dp"
        android:background="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/bottom_left_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"

            android:layout_weight="1">

            <ImageView
                android:id="@+id/icon_non_active_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"

                android:src="@drawable/ic_non_active_page_1"/>

            <ImageView
                android:id="@+id/icon_non_active_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"

                android:src="@drawable/ic_non_active_page_2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_right_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"

            android:layout_weight="1">

            <ImageView
                android:id="@+id/icon_non_active_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"

                android:src="@drawable/ic_non_active_page_3"/>

            <ImageView
                android:id="@+id/icon_active_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginEnd="25dp"
                android:layout_marginStart="20dp"

                android:src="@drawable/ic_active_page"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@+id/layout_bottom"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_top" />

    <ImageView
        android:id="@+id/icon_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:translationZ="8dp"
        android:elevation="12dp"

        android:layout_marginBottom="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_clock" />

</androidx.constraintlayout.widget.ConstraintLayout>