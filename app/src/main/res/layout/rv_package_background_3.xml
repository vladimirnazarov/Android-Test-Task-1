    android:background="@drawable/box_white_cutted_3"
    android:translationZ="6dp"
    android:elevation="4dp"

    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/box_blue_cutted_3"

        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"

        app:layout_constraintLeft_toLeftOf="@id/rv_3_parent_constraint"
        app:layout_constraintRight_toRightOf="@id/rv_3_parent_constraint"
        app:layout_constraintBottom_toBottomOf="@id/rv_3_parent_constraint"
        app:layout_constraintTop_toTopOf="@id/rv_3_parent_constraint"/>

</androidx.constraintlayout.widget.ConstraintLayout>